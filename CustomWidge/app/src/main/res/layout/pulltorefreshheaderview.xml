<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="75dp"
   android:gravity="center_vertical" >
    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_width="30dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_height="30dp">
        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/pulltorefresh_down"
            android:layout_width="wrap_content"
            android:src="@drawable/arrow"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/pulltorefreshing"
            android:layout_width="wrap_content"
            android:src="@drawable/spinner_red"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </RelativeLayout>
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical"
        android:layout_height="75dp">
        <TextView
            android:id="@+id/pulltorefresh_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下拉刷新"
            android:textSize="34px"
            android:textColor="#FF0000"/>
        <TextView
            android:id="@+id/pulltorefresh_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最后刷新时间：2016-9-25 16：59：32"
            android:textSize="24px"
            android:gravity="center_horizontal"
            android:textColor="#ee1e1e22"/>
    </LinearLayout>
</LinearLayout>